#include <stdio.h>

int main()
{
   int n,i,j,num=0;
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       for(j=1;j<=n;j++)
       {
       if(i%2==1)
       {
        num++;
        printf("%d ",num);   
       }
       else
       {
           printf("%d ",num);
           num--;
       }
       }
       num+=n;
       printf("\n");
   }
}
